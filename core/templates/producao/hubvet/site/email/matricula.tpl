<!DOCTYPE html PUBLIC '-//W3C//DTD XHTML 1.0 Transitional//EN'  'http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd'><html xmlns='http://www.w3.org/1999/xhtml'><head>  <meta http-equiv='Content-Type' content='text/html; charset=utf-8'/>  <title>{$post['Titulo_txf']} </title>  <style type='text/css'>    body {      color: #222222;    }    .fonte_tp_table {      font-size: 16px;      font-family: Arial, Helvetica, sans-serif;      color: #FFFFFF;    }    .fonte_campos {      font-family: Arial, Helvetica, sans-serif;      font-size: 14px;    }    .conteudo {      font-family: Arial, Helvetica, sans-serif;      font-size: 16px;    }  </style></head><body><div class="conteudo">  <p>    {if ($post['Nome_txf']!='')}    Caro(a) {$post['Nome_txf']},    {else}    Caro(a),    {/if}    recebemos sua solicitação de simulação e em breve entraremos em contato com você!  </p>  <br/>  <hr>  Atenciosamente..<br/>  <strong>{$cliente->Fantasia_txf}</strong>  <br/>  <br/></div><table width='100%' border='0' align='left' cellpadding='7' cellspacing='0'>  <tbody>  <tr>    <td colspan='2' bgcolor='#000000' style="color: #FFFFFF"><strong class='fonte_tp_table'>Dados Enviados </strong>    </td>  </tr>  {if ($post['Nome_txf']!='')}  <tr>    <td bgcolor='#FFFFFF' class='fonte_campos'>Nome do responsável:</td>    <td bgcolor='#FFFFFF' class='conteudo'>{$post['Nome_txf']}</td>  </tr>  {/if}  {if ($post['Email_txf']!='')}  <tr>    <td bgcolor='#F5f5f5' class='fonte_campos'>Email:</td>    <td bgcolor='#F5f5f5' class='conteudo'>{$post['Email_txf']}</td>  </tr>  {/if}  {if ($post['Telefone_txf']!='')}  <tr>    <td bgcolor='#FFFFFF' class='fonte_campos'>Telefone:</td>    <td bgcolor='#FFFFFF' class='conteudo'>{$post['Telefone_txf']}</td>  </tr>  {/if}  {if ($post['Cep_txf']!='')}  <tr>    <td bgcolor='#FFFFFF' class='fonte_campos'>CEP:</td>    <td bgcolor='#FFFFFF' class='conteudo'>{$post['Cep_txf']}</td>  </tr>  {/if}  {if ($post['Cpf_txf']!='')}  <tr>    <td bgcolor='#FFFFFF' class='fonte_campos'>CPF:</td>    <td bgcolor='#FFFFFF' class='conteudo'>{$post['Cpf_txf']}</td>  </tr>  {/if}  {if ($post['Estado_civil_txf']!='')}  <tr>    <td bgcolor='#F5f5f5' class='fonte_campos'>Estado civil:</td>    <td bgcolor='#F5f5f5' class='conteudo'>{$post['Estado_civil_txf']}</td>  </tr>  {/if}  {if ($post['Tipo_seguro_txf']!='')}  <tr>    <td bgcolor='#F5f5f5' class='fonte_campos'>Tipo do seguro:</td>    <td bgcolor='#F5f5f5' class='conteudo'>{$post['Tipo_seguro_txf']}</td>  </tr>  {/if}  {if ($post['Seguro_escolhido_txf']!='')}  <tr>    <td bgcolor='#F5f5f5' class='fonte_campos'>Seguro escolhido:</td>    <td bgcolor='#F5f5f5' class='conteudo'>{$post['Seguro_escolhido_txf']}</td>  </tr>  {/if}  {if ($post['Campos_extras_jso']!='')}  {$campos=json_decode($post['Campos_extras_jso'])}  {if $campos}  {foreach from=$campos item=campo key=nome}  <tr>    <td bgcolor='#F5f5f5' class='fonte_campos'>{$nome}:</td>    <td bgcolor='#F5f5f5' class='conteudo'>{$campo}</td>  </tr>  {/foreach}  {/if}  {/if}  </tbody></table></body></html>