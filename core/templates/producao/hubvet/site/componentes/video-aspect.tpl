{assign var='aspect' value=$aspect|default:'4-3'}{assign var='video' value=$video|default:false}{assign var='radius' value=$radius|default:false}{assign var='fluid' value=$fluid|default:false}{assign var='height' value=$height|default:false}{assign var='hide_bg' value=$hide_bg|default:false}{if $height}{if $height == 'fill'}{$inner_height = 'auto'}{$fill_height = true}{else}{$inner_height = $height}{$fill_height = false}{/if}{/if}{$disponivel = false}{if $video->Endereco_txf}{$disponivel = true}{/if}<a  class="aspect aspect-{$aspect} {if $radius}br-{$radius}{/if} overflow-hidden {if !$hide_bg}bg-light-body{/if} {if $fill_height}fill-height{/if} d-block {if $disponivel}fancybox hover hover-opacity{else}pe-none{/if}"  href="{if $disponivel}https://www.youtube.com/embed/{$video->Endereco_txf}{else}javascript:void(0);{/if}"  data-fancybox="galeria-{$id}"  style="height: {$inner_height}">  <figure class="imagem aspect-item">    {if $video->Endereco_txf}    <img      itemprop="image"      src="http://img.youtube.com/vi/{$video->Endereco_txf}/mqdefault.jpg"      alt="{$video->Descricao_txf}" title="{$video->Descricao_txf}"      class="img-fit"    />    <div class="bg-fake" style="background: rgba(0,0,0,.65)"></div>    <div class="bg-fake text-center">      <div class="d-block align-center" style="opacity: 0.9">        <div          class="bg-fake"          style="background: #fff;                      width: 40px;                      height: 40px;                      left: 50%;                      top: 50%;                      margin-left: -20px;                      margin-top: -20px;"        ></div>        <i class="fas fa-play-circle fz-70 lh-1 text-primary"></i>      </div>    </div>    {else}    <img itemprop="image"         src="{$assets}imagens/indisponivel.png"         alt="Vídeo indisponível" title="Vídeo indisponível"         class="mx-auto {if $fluid}img-fluid{else}img-fit{/if} d-block"    />    {/if}  </figure></a>