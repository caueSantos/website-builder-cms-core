{assign var='itens' value=$itens|default:'1-2-4'}{assign var='nav' value=$nav|default:false}{assign var='dots' value=$dots|default:false}{$id='galeria-imagem-'|cat:uniqid()}{if $imagens[0]}<div class="galeria" id="{$id}">  <div class="owl-carousel carousel-galeria"       data-owl-carousel       data-rwd="{$itens}"       data-owl-loop="true"       data-owl-autoplay="true"       data-owl-autoplay-timeout="6000"       data-owl-margin="30"       data-owl-dots="{if $pagination}true{else}{$dots}{/if}"       data-owl-nav="{$nav}"       data-owl-dots-container="#{$id} .owl-dots"       data-dot-class="owl-dot col-lg"       data-owl-nav-text="@icon:fas fa-chevron-left@ Anterior--PrÃ³ximo @icon:fas fa-chevron-right@"       data-owl-nav-container="#{$id} .owl-nav"       data-owl-dots-each="1"  >    {foreach from=$imagens item=imagem}    <div class="item">      <a class="aspect aspect-3-2 d-block fancybox hover hover-opacity {$item_class}"         href="{$painel}/{$imagem->Caminho_txf}"         data-fancybox="galeria-{$id}"      >        <figure class="imagem aspect-item">          <img itemprop="image" src="{$painel}/{$imagem->Caminho_txf}"               alt="{$imagem->Descricao_txf}" title="{$imagem->Descricao_txf}" class="img-fit"/>        </figure>      </a>    </div>    {/foreach}  </div>  <div class="carousel-super-nav mx-auto">    {if $pagination}    <div class="owl-nav mt-50 d-flex">      <div class="flex-grow-1">        <div class="owl-dots row no-gutters v-meio pl-40 pr-40">        </div>      </div>    </div>    {/if}    {if $dots && !$pagination}    <div class="rounded-dots d-block text-center mt-30">      <div class="owl-dots fz-18"></div>    </div>    {/if}  </div></div>{/if}