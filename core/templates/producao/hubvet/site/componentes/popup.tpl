{foreach from=$popup item=alerta}    {if $alerta->Tipo_sel == 'IMAGEM'}        <div class="modal fade" id="popup-{$alerta->Id_int}" tabindex="-1" role="dialog" aria-labelledby="popup-{$alerta->Id_int}-label" aria-hidden="true">            <div class="modal-dialog" role="document">                <div class="modal-content">                    <button type="button" class="popup-close" data-dismiss="modal" aria-label="Close">                        <span aria-hidden="true">&times;</span>                    </button>                    <div class="modal-body {if $alerta->Tipo_sel == 'IMAGEM'}p-0{/if}">                        <img class="img-fluid" src="{$app->Url_cliente_linguagem}{$app->Pasta_painel}/{$alerta->Imagens[0]->Caminho_txf}" />                    </div>                </div>            </div>        </div>    {else}        <div class="modal fade" id="popup-{$alerta->Id_int}" tabindex="-1" role="dialog" aria-labelledby="popup-{$alerta->Id_int}-label" aria-hidden="true">            <div class="modal-dialog" role="document">                <div class="modal-content">                    {if strlen($alerta->Titulo_txf) > 0}                        <div class="modal-header">                            <h5 class="modal-title" id="popup-{$alerta->Id_int}-label">{$alerta->Titulo_txf}</h5>                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">                                <span aria-hidden="true">&times;</span>                            </button>                        </div>                    {/if}                    <div class="modal-body {if $alerta->Tipo_sel == 'IMAGEM'}p-0{/if}">                        {if $alerta->Tipo_sel != 'IMAGEM'}                            {$config['img_classe']=''}                            {$config['img_fora']='text-center'}                            {$config['img_style']='width: auto;'}                            {$config['vid_fora']='text-center'}                            {$config['vid_style']='width:100%;height:400px;'}                            {$config['tipo_nota']='popover'}                            <div class="texto">{cria_tags($alerta->Texto_txa,$config,$alerta->Imagens)}</div>                        {else}                            <img class="img-fluid" src="{$app->Url_cliente_linguagem}{$app->Pasta_painel}/{$alerta->Imagens[0]->Caminho_txf}" />                        {/if}                    </div>                    <div class="modal-footer">                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>                    </div>                </div>            </div>        </div>    {/if}    <script>        {if $alerta->Exibir_ao_sair_sel == 'SIM'}            $(document).on("mouseout", function(e) {                e = e ? e : window.event;                var from = e.relatedTarget || e.toElement;                if (!from || from.nodeName == "HTML") {                    $popup = $('#popup-{$alerta->Id_int}');                    if (e.clientY < 0 && !$popup.data('showed')) {                        $('#popup-{$alerta->Id_int}').modal('show');                        $popup.data('showed', true);                    }                }            });        {else}            $(document).ready(function () {                setTimeout(function () {                    $('#popup-{$alerta->Id_int}').modal('show');                }, {intval($alerta->Delay_txf) * 1000});            });        {/if}    </script>{/foreach}