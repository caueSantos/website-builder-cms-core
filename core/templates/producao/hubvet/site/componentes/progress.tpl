{if !$width}    {$width=0}{/if}{if $small}    <div class="progress-wrap">        {if !$no_info}            <div class="flex-pai flex-row lh-1">                <div class="flex-filho flex-grow-1 text-left justify-content-start">                    {if $nome}                        <div class="d-block progress-name">{$nome}</div>                    {/if}                </div>                <div class="flex-filho flex-grow-0 text-right">                    <div class="progress-num fw-500 fz-16 ff-montserrat pl-20">                        {$width}%                    </div>                </div>            </div>        {/if}        <div class="progress br-100 flex-fill mt-10" style="background-color: #C4C4C4; height: 8px">            <div class="bg-accent progress-bar" role="progressbar" style="width: {$width}%"                 aria-valuenow="{$width}"                 aria-valuemin="0" aria-valuemax="100"            ></div>        </div>    </div>{else}    <div class="progress-wrap {if !$no_info}flex-pai flex-row{/if}">        <div class="{if !$no_info}flex-filho flex-grow-1 pt-10{/if}">            <div class="progress br-100 flex-fill">                <div class="bg-accent progress-bar" role="progressbar" style="width: {$width}%"                     aria-valuenow="{$width}"                     aria-valuemin="0" aria-valuemax="100"                ></div>            </div>        </div>        {if !$no_info}            <div class="flex-filho flex-grow-0">                <div class="progress-num text-primary fz-40 fw-700 ff-montserrat pl-20 lh-1">                    {$width}%                </div>            </div>        {/if}    </div>{/if}