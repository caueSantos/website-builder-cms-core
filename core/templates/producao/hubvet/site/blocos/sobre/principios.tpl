{if $sobre_principios[0]}    <section class="principios-carousel pt-80 pb-100">        <div class="container">            <div class="row">                <div class="col-lg-4">                    <div class="align-center">                        <h1 class="title text-primary fz-40 fw-400 lh-12">                            {titulo('sobre_principios', 'tit', $titulos)}                        </h1>                        {if titulo('sobre_principios', 'sub', $titulos)}                            <div class="texto fz-14 mt-15 lh-18">                                {titulo('sobre_principios', 'sub', $titulos)}                            </div>                        {/if}                        <div class="rounded-dots mt-15">                            <div class="owl-dots fz-18"></div>                        </div>                    </div>                </div>                <div class="col-lg-8">                    <div class="container-gutter-width-calc">                        <div class="container-gutter-negative">                            <div class="owl-carousel carousel-principios"                                 data-owl-carousel                                 data-owl-items="4"                                 data-owl-slide-by="1"                                 data-owl-dots-each="1"                                 data-rwd="4-3-1"                                 data-owl-loop="true"                                 data-owl-autoplay="true"                                 data-owl-autoplay-timeout="10000"                                 data-owl-margin="30"                                 data-owl-dots="true"                                 data-owl-nav="false"                                 data-owl-dots-container=".principios-carousel .owl-dots"                            >                                {foreach from=$sobre_principios item=item}                                    <div class="item">                                        <div class="principio-item bg-white bs-2 text-center fill-height pl-30 pr-30 br-1 pt-40 pb-50">                                            <figure style="width: 64px; margin: 0 auto">                                                {if $item->Imagens[0]}                                                    <img                                                            alt="{$item->Nome_tit}"                                                            src="{$painel}{$item->Imagens[0]->Caminho_txf}"                                                            style="width: 100%"                                                    />                                                {else}                                                    <img alt="{$item->Nome_tit}"                                                         src="{$assets}imagens/indisponivel-quadrada.png"                                                         style="width: 100%"                                                    />                                                {/if}                                            </figure>                                            <div title="{$item->Nome_tit}"                                                 class="title lh-1 mt-10 fz-26 fw-700 text-primary" data-clamp="2">                                                {$item->Nome_tit}                                            </div>                                            <div class="texto fz-14 lh-18 mt-15" data-clamp="2">                                                {corta_texto($item->Descricao_txa, 100)}                                            </div>                                        </div>                                    </div>                                {/foreach}                            </div>                        </div>                    </div>                </div>            </div>        </div>    </section>{/if}