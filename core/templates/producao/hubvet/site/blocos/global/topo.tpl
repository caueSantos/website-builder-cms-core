<header id="topo" class="{if $pagina_atual != 'inicio'}fixo{/if}">  <div class="bottom pt-lg-20 pb-lg-20">    <div class="container">      <div class="row">        <div class="col-lg-auto col-logo">          <div class="logo align-center">            <a href="{gera_link('inicio', true)}" class="d-block" title="{trans('menu_topo_logo_title')}">              <img itemprop="image" class="img-fluid" src="{$assets}imagens/logo-topo.png"                   alt="Logo {$cliente->Fantasia_txf}">              <img itemprop="image" class="img-fluid img-alt" src="{$assets}imagens/logo-topo-escuro.png"                   alt="Logo {$cliente->Fantasia_txf}">            </a>          </div>        </div>        <div class="col-lg col-menu">          <div id="menu-topo" class="align-center">            <nav class="navbar navbar-expand-lg">              <button                class="navbar-toggler"                type="button"                data-toggle="collapse"                data-target="#navbar-topo"                aria-controls="navbar-topo"                aria-expanded="false"                aria-label="Toggle navigation"              >                <span class="navbar-toggler-icon fa fa-bars pr-5"></span>                <span class="texto-menu"></span>              </button>              <div class="collapse navbar-collapse" id="navbar-topo">                <ul class="navbar-nav mx-auto">                  <li class="nav-item">                    <a class="nav-link {if $pagina_atual=='inicio'}active{/if}"                       title="{trans('menu_topo_inicio_title')}"                       href="{gera_link('inicio', true)}"                    >                      {trans('menu_topo_inicio')}                    </a>                  </li>                  <li class="nav-item dropdown">                    <a class="nav-link dropdown-toggle {if $pagina_atual=='solucoes'}active{/if}"                       title="{trans('menu_topo_solucoes_title')}"                       href="{gera_link('solucoes', true)}"                    >                      {trans('menu_topo_solucoes')}                    </a>                    <div class="dropdown-menu">                      {$itens=array_merge($solucoes_controle_lista, $solucoes_oferecer_lista)}                      {foreach from=$itens item=solucao}                      <a class="dropdown-item" href="{gera_link('solucoes#'|cat:{$solucao->Nome_url}, true)}">                        {$solucao->Nome_tit}                      </a>                      {/foreach}                    </div>                  </li>                  <li class="nav-item">                    <a class="nav-link {if $pagina_atual=='planos'}active{/if}"                       title="{trans('menu_topo_planos_title')}"                       href="{gera_link('planos', true)}"                    >                      {trans('menu_topo_planos')}                    </a>                  </li>                  <li class="nav-item dropdown">                    <a class="nav-link dropdown-toggle {if $pagina_atual=='cases'}active{/if}"                       title="{trans('menu_topo_cases_title')}"                       href="{gera_link('cases', true)}"                    >                      {trans('menu_topo_cases')}                    </a>                    <div class="dropdown-menu">                      {$itens=array_merge($solucoes_controle_lista, $solucoes_oferecer_lista)}                      {foreach from=$itens item=solucao}                      <a class="dropdown-item" href="{gera_link('cases#'|cat:{$solucao->Nome_url}, true)}">                        {$solucao->Nome_tit}                      </a>                      {/foreach}                    </div>                  </li>                  <li class="nav-item dropdown">                    <a class="nav-link dropdown-toggle {if $pagina_atual=='conteudo'}active{/if}"                       title="{trans('menu_topo_conteudo_title')}"                       href="{gera_link('conteudo', true)}"                    >                      {trans('menu_topo_conteudo')}                    </a>                    <div class="dropdown-menu">                      {$itens=array_merge($solucoes_controle_lista, $solucoes_oferecer_lista)}                      {foreach from=$itens item=solucao}                      <a class="dropdown-item" href="{gera_link('conteudo#'|cat:{$solucao->Nome_url}, true)}">                        {$solucao->Nome_tit}                      </a>                      {/foreach}                    </div>                  </li>                </ul>              </div>            </nav>          </div>        </div>        <div class="col-lg-auto">          <div class="align-center">            {$linguagens = opcoes_linguagens(linguagens_disponiveis(null, true))}            <form action="{$app->Url_cliente_linguagem}" method="post">              <div                class="dropdown no-animate dropdown-select cursor-pointer dropdown-linguagem"                id="filtro-ordenacao"              >                <div                  class="title fz-14 fw-800 dropdown-toggle simple-arrow arrow-left"                  data-toggle="dropdown"                >                  <div class="dropdown-selected d-inline-block va-middle"></div>                </div>                <div class="dropdown-menu dropdown-menu-right cursor-pointer bg-white">                  {foreach from=$linguagens item=linguagem}                  <a                    class="cursor-pointer dropdown-item bg-body-light-hover text-left {if $app->Linguagem_banco_sel == $linguagem->locale}active{/if}"                    data-value="{$linguagem->locale}"                  >                    <div class="flag">                      <div class="d-inline-block va-middle">                        <img class="d-block" src="{$linguagem->flag}" width="24px" height="17px"/>                      </div>                      <div class="text d-inline-block va-middle pl-5">                        {$linguagem->display_language_compose}                      </div>                    </div>                  </a>                  {/foreach}                </div>                <input class="dropdown-value" type="hidden"/>              </div>            </form>          </div>        </div>      </div>    </div>  </div></header>