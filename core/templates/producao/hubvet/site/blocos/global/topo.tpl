{$menu_topo=junta_registros($menu_topo, 'Nome_url', $menu_topo_itens, 'Menu_sel', 'Itens')}<header id="topo" class="{if $pagina_atual != 'inicio'}fixo{/if}">  <div class="bottom pt-lg-20 pb-lg-20">    <div class="container">      <div class="row">        <div class="col-lg-auto col-logo">          <div class="logo align-center">            <a href="{gera_link('inicio', true)}" class="d-block" title="{trans('menu_topo_logo_title')}">              <img itemprop="image" class="img-fluid" src="{$assets}imagens/logo-topo.png"                   alt="Logo {$cliente->Fantasia_txf}">              <img itemprop="image" class="img-fluid img-alt" src="{$assets}imagens/logo-topo-escuro.png"                   alt="Logo {$cliente->Fantasia_txf}">            </a>          </div>        </div>        <div class="col-lg col-menu">          <div id="menu-topo" class="align-center">            <nav class="navbar navbar-expand-lg">              <button                class="navbar-toggler"                type="button"                data-toggle="collapse"                data-target="#navbar-topo"                aria-controls="navbar-topo"                aria-expanded="false"                aria-label="Toggle navigation"              >                <span class="navbar-toggler-icon fa fa-bars pr-5"></span>                <span class="texto-menu"></span>              </button>              <div class="collapse navbar-collapse" id="navbar-topo">                <ul class="navbar-nav mx-auto">                  {foreach from=$menu_topo item=menu}                  <li class="nav-item {if $menu->Itens[0]}dropdown{/if}">                    <a                      class="nav-link {if $menu->Itens[0]}dropdown-toggle{/if} {if $pagina_atual == $menu->Nome_url}active{/if}"                      title="{$menu->Title_txa}"                      href="{gera_link($menu->Nome_url, true)}"                      data-menu-id="{$menu->Nome_url}"                    >                      {$menu->Nome_tit}                    </a>                  </li>                  {/foreach}                </ul>              </div>            </nav>          </div>        </div>        <div class="col-lg-auto">          <div class="align-center">            {$linguagens = opcoes_linguagens(linguagens_disponiveis(null, true))}            <form action="{$app->Url_cliente_linguagem}" method="post">              <div                class="dropdown no-animate dropdown-select cursor-pointer dropdown-linguagem"                id="filtro-ordenacao"              >                <div                  class="title fz-14 fw-800 dropdown-toggle simple-arrow arrow-left"                  data-toggle="dropdown"                >                  <div class="dropdown-selected d-inline-block va-middle"></div>                </div>                <div class="dropdown-menu dropdown-menu-right cursor-pointer bg-white">                  {foreach from=$linguagens item=linguagem}                  <a                    class="cursor-pointer dropdown-item bg-body-light-hover text-left {if $app->Linguagem_banco_sel == $linguagem->locale}active{/if}"                    data-value="{$linguagem->locale}"                  >                    <div class="flag">                      <div class="d-inline-block va-middle">                        <img class="d-block" src="{$linguagem->flag}" width="24px" height="17px"/>                      </div>                      <div class="text d-inline-block va-middle pl-5">                        {$linguagem->display_language_compose}                      </div>                    </div>                  </a>                  {/foreach}                </div>                <input class="dropdown-value" type="hidden"/>              </div>            </form>          </div>        </div>      </div>    </div>  </div>  <div id="topo-full-menu" class="window-width">    <div class="menu-height full-menu-inner bg-body-light bs-1">      <div class="container pl-md-30 pr-md-30">        {foreach from=$menu_topo item=menu}        <div class="menu-group" data-menu="{$menu->Nome_url}">          <div class="row">            {foreach from=$menu->Itens item=item}            <div class="col-md-3 px-0 py-0">              <a                class="d-block fill-height menu-group-item pr-md-40 pl-md-40 pt-md-30 pb-md-40 bg-body-lighter-hover"                href="{gera_link($item->Botao_link_txf, true)}"              >                <div class="align-centera">                  {if $item->Imagens[0]}                  <figure class="mb-20">                    <img                      style="height: 32px; width: auto"                      src="{$painel}{$item->Imagens[0]->Caminho_txf}"                      alt="{$item->Nome_tit}"                    />                  </figure>                  {/if}                  <div class="title fw-700 fz-14 text-body-primary">                    {$item->Nome_txf}                  </div>                  <div class="desc ff-secondary fz-12 text-body-secondary mt-10">                    {$item->Descricao_txa}                  </div>                  <div class="botao ff-secondary text-secondary fw-700 fz-12 mt-15">                    {$item->Botao_texto_txf}                  </div>                </div>              </a>            </div>            {/foreach}          </div>        </div>        {/foreach}      </div>    </div>  </div></header>